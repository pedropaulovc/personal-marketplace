{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "b=\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/windows-bash-guard\"; test -f \"$b.exe\" && exec \"$b.exe\" || exec \"$b\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "b=\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/unrelated-issue-detector\"; test -f \"$b.exe\" && exec \"$b.exe\" || exec \"$b\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "b=\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/mediocrity-detector\"; test -f \"$b.exe\" && exec \"$b.exe\" || exec \"$b\""
          }
        ]
      }
    ]
  }
}
